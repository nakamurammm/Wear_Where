<% post_images.each do |post_image| %>
  <br>
  <br>
  <div class="row">
    <div class="col-lg-3"></div>

    <div class="col-lg-3">
      <%= link_to post_image_path(post_image.id) do %>
        <%= attachment_image_tag post_image, :image, size:"200x200" %>
      <% end %>
    </div>
    <div class="col-lg-3">
      <p>説明：<%= post_image.caption %></p>
      <p>投稿ユーザー：<%= post_image.user.name %></p>
      <p>登録日時：<%= post_image.created_at.strftime('%Y/%m/%d') %></p>
      <%= link_to "#{post_image.post_comments.count} コメント", post_image_path(post_image.id) %>
      <% if current_user != post_image.user %>
      <span id="favorites_buttons_<%= post_image.id %>">
        <%= render partial: 'favorites/favorite', locals: { post_image: post_image} %>
      </span>
      <% end %>
    </div>
    <div class="col-lg-3"></div>
  </div>
<% end %>