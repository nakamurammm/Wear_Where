<% if @post_image.errors.any? %>
  <%= @post_image.errors.count %>件のエラーが発生しました
  <% @post_image.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<br>
<div class="container">
  <div class="row">
    <div class="col-md-4"></div>

    <div class="col-md-4">
      <h5>画像投稿フォーム</h5>

      <%= form_with model: @post_image, local:true do |f| %>
      <br>
        <%= f.attachment_field :image %><br>

        <%= f.label :captioon, '説明文', class:"col-form-label"%>
        <%= f.text_area :captioon, placeholder: "ひとことコメント", class: "form-control" %><br>

        <%= f.submit '投稿', class:"btn btn-success mx-auto" %>
      <% end %>
    </div>
  </div>
</div>