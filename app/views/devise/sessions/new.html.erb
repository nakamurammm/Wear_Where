<div class="container">
  <br><br>
  <div class="row">
    <div class="form-group col-lg-4"></div>
    <div class="form-group col-lg-4">
      <h5 class= "toptext">ログイン</h5><br>
      <h7 class= "toptext">会員の方はこちらからログイン</h7>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <%= f.label :name,'名前', class:"col-form-label" %><br>
        <%= f.text_field :name, autofocus: true, placeholder:"ユーザーネーム", autocomplete: "name", class: "form-control" %>

        <%= f.label :password,'パスワード', class:"col-form-label" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %><br>

        <%= f.submit "ログイン",class:'btn btn-primary col-sm-12' %>
      <% end %>
      <br><br>

      <p>
      会員登録がお済みでない方は<br>
      <%= render "devise/shared/links" %>
      から新規登録を行ってください。</p>
    </div>
    <div class="form-group col-lg-4"></div>
  </div>
</div>