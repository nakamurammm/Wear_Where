<br>
<div class="container">
  <div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
      <h5>こどもの情報登録</h5>

      <%= form_with model:@child, local:true do |f| %>

        <%= f.label :name, 'こどものなまえ', class:"col-form-label" %><br>
        <%= f.text_field :name, placeholder: "はなこ", class: "form-control" %><br>

        <%= f.label :tall, '身長', class:"col-form-label" %><br>
        <%= f.text_field :tall, placeholder: "89", class: "form-control" %>cm<br>

        <%= f.label :tops_size, '洋服のサイズ（上）', class:"col-form-label" %><br>
        <%= f.text_field :tops_size, placeholder: "100", class: "form-control" %>cm<br>

        <%= f.label :bottom_size, '洋服のサイズ（下）', class:"col-form-label" %><br>
        <%= f.text_field :bottom_size, placeholder: "90", class: "form-control" %>cm<br>

        <%= f.label :foot_size, '足のサイズ', class:"col-form-label" %><br>
        <%= f.text_field :foot_size, placeholder: "15", class: "form-control" %>cm<br>

        <%= f.submit '投稿', class:"btn btn-success mx-auto" %>

      <% end %>
    </div>
  </div>
</div>