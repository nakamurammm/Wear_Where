<% @children.each do |child| %>

<h1><%= child.name %></h1><br>
    <% child.dresses.each do |dress| %>
         <%= link_to dress_path(dress.id) do %>
        <%= attachment_image_tag dress, :image, format: 'jpeg', size: "150x150" %>
      <% end %><br>

      <%= dress.genre.name %><br>
      <%= dress.get_season_name %><br>
      <%= dress.size %> cm<br>
    <% end %>
    <% end %>