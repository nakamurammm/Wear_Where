<div class="tab-wrap">
  <input id="tab00" type="radio" name="tab" class="tab-switch" checked="checked"><label class="tab-label" for="tab00">ALL</label>
    <div class="tab-content col-lg-12">
    <% @dresses.each do |dress| %>

      <%= link_to dress_path(dress.id) do %>
        <%= attachment_image_tag dress, :image, format: 'jpeg', size: "150x150" %>
      <% end %><br>

      <%= dress.genre.name %><br>
      <%= dress.get_season_name %><br>
      <%= dress.size %> cm<br>
    <% end %>
    </div>
  <% @genres.each do |genre| %>
    <input id="tab0<%= genre.id %>" type="radio" name="tab" class="tab-switch"><label class="tab-label" for="tab0<%= genre.id %>"><%= genre.name%></label>
    <div class="tab-content">
      <!-- n+1問題 -->
      <% @dresses.where(genre_id: genre.id).each do |dress| %>
        <%= link_to dress_path(dress.id) do %>
          <%= attachment_image_tag dress, :image, format: 'jpeg', size: "150x150" %>
        <% end %><br>

      <%= dress.genre.name %><br>
      <%= dress.get_season_name %><br>
      <%= dress.size %> cm<br>
      <% end %>
    </div>
  <% end %>
<%= link_to "新しいおようふくを登録する！", new_dress_path, class: "list-item" %>
</div>


