  <div class="row">
    <div class="col-lg-3"></div>
    <br>
    <br>
    <div class="col-lg-3">
      <%= attachment_image_tag @dress, :image, size:"300x300" %>
    </div>

    <div class="col-lg-3">
      <p>ジャンル：<%= @dress.genre.name %></p>
      <p>シーズン：<%= @dress.get_season_name %></p>
      <p>サイズ：<%= @dress.size %></p>
      <p>説明：<%=@dress.explanation %></p>
      <p><%= @dress.child.name %>のようふく</p>
      <p>登録日時：<%= @dress.created_at.strftime('%Y/%m/%d') %></p>
      <% @dress.tags.each do |tag| %>
        <span class="ribbonlabel fas fa-tag"><%= tag.name %></span><br>
      <% end %><br>

      <% if current_user %>
      <%= link_to "削除", dress_path(@dress), method: :delete, class: "btn btn-secondary", data: { confirm: '削除しますか？' } %>
      <% end %>
      <%= link_to "編集", edit_dress_path(@dress.id), class: "btn btn-secondary" %>
      </br></br>
      <%= link_to "一覧ページへ", dresses_path, class: "btn btn-secondary" %>
    </div>
    <div class="col-lg-3"></div>
  </div>
